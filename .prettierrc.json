{
  "arrowParens": "avoid",
  "semi": true,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "useTabs": false,
  "trailingComma": "none",
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "**/*.md",
      "options": {
        "printWidth": 76,
        "tabWidth": 2,
        "proseWrap": "never"
      }
    },
    {
      "files": ["*.json5"],
      "options": {
        "singleQuote": false,
        "quoteProps": "preserve"
      }
    },
    {
      "files": ["*.yml"],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "plugins": ["prettier-plugin-organize-imports"]
}
